@import 'nib'

html
  overflow-y scroll

.dl-horizontal
  dd
    overflow-x hidden
    padding-bottom 14px

  @media screen and (max-width: 768px)
    text-align center

.page-container pre
  overflow-x auto
  overflow-y hidden
  code
    display block
    min-width 280px

for i in 1 2 3 4 5
  space = 4px
  .space-t{i}
    margin-top space*i
  .space-b{i}
    margin-bottom space*i
  .space-v{i}
    margin-bottom space*i
    margin-top space*i

.bold
  text-shadow 1px 1px 4px #A54AA5

.spinner
   height        60px
   width         60px
   margin        15px auto
   position      relative
   animation     spinner-rotation .6s infinite linear
   border-left   6px solid rgba(0,174,239,.15)
   border-right  6px solid rgba(0,174,239,.15)
   border-bottom 6px solid rgba(0,174,239,.15)
   border-top    6px solid rgba(0,174,239,.8)
   border-radius 100%

@keyframes spinner-rotation {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(359deg);
  }
}

